@model IEnumerable<WebDiary.DB.Models.Teacher>

@{
    ViewBag.Title = "Список преподавателей";
}

<h3>Список преподавателей</h3>

<p>
    <a href="@Url.Action("Create", "ShowTeachersList")" class="btn btn-primary btn-sm")>Добавить преподавателя</a>
</p>

<table class="table  mb-3">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Логин
        </th>
        <th>
            Администратор
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdministrator)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new {id = item.Id})<br/>
                @Html.ActionLink("Редактировать", "Edit", new {id = item.Id})
            </td>
        </tr>
    }

</table>